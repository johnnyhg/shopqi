.small_contrainer{:style => 'width:300px; background-color:#0078A7'}
  .operates
    =link_to '<<在其前添加', new_menu_path('menu[neighbor]' => resource.id, :'menu[direct]' => :above), :remote => true, :update => 'tooltip' unless resource.new_record?
    =link_to '在其后添加>>', new_menu_path('menu[neighbor]' => resource.id, 'menu[direct]' => :below), :remote => true, :update => 'tooltip', :style => 'float:right' unless resource.new_record?
  = semantic_form_remote_for(resource) do |f|
    =f.inputs do
      =f.input :direct, :as => :hidden
      =f.input :neighbor, :as => :hidden
    =f.inputs :name, :url
    =f.buttons do
      =f.commit_button '保存'
      -unless resource.new_record?
        %li=link_to '删除', menu_path, :remote => true, :method => :delete
