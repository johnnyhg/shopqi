!!! Strict
%html{html_attrs('zh-CN')}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title ShopQi工作平台
    =formtastic_stylesheet_link_tag
    =jqgrid_stylesheets
    = stylesheet_link_tag "photomaker/jgrowl", 'compiled/photomaker/fileuploader', "web_app_theme", "web_app_theme_override", "themes/djime-cerulean/style", "compiled/user", "jixedbar/jx.stylesheet", :cache => true
    = javascript_include_tag :defaults, 'jquery-ui.custom.min', 'inspect', 'photomaker/jgrowl', 'photomaker/fileuploader', 'tree/cookie', 'tree/hotkeys', 'tree/jstree', 'jeditable/jeditable', 'jeditable/checkbox', 'jeditable/on_the_spot', 'jixedbar/jixedbar.min', 'jixedbar/menu'
    -#=jqgrid_javascripts
    = csrf_meta_tag
  %body
    #container
      #header
        %h1= link_to 'ShopQi工作平台', root_path
        #user-navigation
          %ul.wat-cf
            %li
              = link_to '/', :target => :_blank do
                = t "web-app-theme.design", :default => "Design"
            %li
              = link_to "#" do
                = t "web-app-theme.profile", :default => "Profile"
            %li
              = link_to edit_store_path(0), :remote => true do
                = t "web-app-theme.settings", :default => "Settings"
            %li
              = link_to destroy_user_session_path, :class => "logout" do
                = t "web-app-theme.logout", :default => "Logout"
        #main-navigation
          %ul.wat-cf
            %li.first.active=link_to '工作平台', user_root_path
            %li=link_to '商品', user_root_path
            %li=link_to '订单', user_root_path
            %li=link_to '会员', user_root_path
            %li=link_to '促销', user_root_path
            %li=link_to '界面', user_root_path
      #wrapper.wat-cf
        #main
          -#.inner= render :partial => "stores/edit"
          = yield
          #footer
            .block
              %p
                Copyright ©
                = Time.now.year
                ShopQi.com
          #menu-bar
            %ul
              %li
        #sidebar
          = yield :sidebar
