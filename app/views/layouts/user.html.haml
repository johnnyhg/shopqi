!!! Strict
%html{html_attrs('zh-CN')}
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title ShopQi工作平台
    =formtastic_stylesheet_link_tag
    = stylesheet_link_tag "photomaker/jgrowl", "web_app_theme", "web_app_theme_override", "themes/djime-cerulean/style", :cache => true
    = javascript_include_tag :defaults, 'inspect', 'photomaker/jgrowl', 'tree/cookie', 'tree/hotkeys', 'tree/jstree'
    = csrf_meta_tag
  %body
    #container
      #header
        %h1= link_to 'ShopQi工作平台', root_path
        #user-navigation
          %ul.wat-cf
            %li
              = link_to page_path, :target => :_blank do
                = t "web-app-theme.design", :default => "Design"
            %li
              = link_to "#" do
                = t "web-app-theme.profile", :default => "Profile"
            %li
              = link_to "#" do
                = t "web-app-theme.settings", :default => "Settings"
            %li
              = link_to destroy_user_session_path, :class => "logout" do
                = t "web-app-theme.logout", :default => "Logout"
        #main-navigation
          %ul.wat-cf
            %li.first.active=link_to '工作平台', user_root_path
            %li=link_to '商品', user_root_path
            %li=link_to '订单', user_root_path
            %li=link_to '会员', user_root_path
            %li=link_to '促销', user_root_path
            %li=link_to '界面', user_root_path
      #wrapper.wat-cf
        #main
          = yield
          #footer
            .block
              %p
                Copyright ©
                = Time.now.year
                ShopQi.com
        #sidebar
          = yield :sidebar
