  %head
    %title ShopQi 适合中小企业的网店平台
    = stylesheet_link_tag "main"
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #wrapper.bhome
      %ul#quicklinks
        %li#signup
          %a{:href => "#"} 注册试用
        %li#manage
          %a{:href => "#"} 管理您的网店
