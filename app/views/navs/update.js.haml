$("#navs li[edit-id='#{resource.id}']").replaceWith('#{escape_javascript( render(:partial => "navs/item", :object => resource))}');
//reset tooltip
$("#navs li[edit-id='#{resource.id}'] a").tooltip(tooltip_setting).dynamic(dynamic_setting);
$("#tooltip").fadeOut('slow');
//reset first class
$("#navs li:first").addClass('no_bar');
$("#navs li:gt(0)").removeClass('no_bar');
